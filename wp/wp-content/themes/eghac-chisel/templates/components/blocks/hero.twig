{% if fields.hero_slider_items %}
  {% set slider_name = 'slider-' ~ random() %}
  <section class="js-slider-wrapper c-block--hero" data-slider-speed="{{ fields.hero_slider_speed }}">
    <div id="{{ slider_name }}" class="js-slider c-hero__slider">
      {% for slide in fields.hero_slider_items %}
        <div class="c-hero__slide-wrapper">
          <div class="c-hero__slide"
            {% if slide.h_background_image %}
              style="background-image: url({{ slide.h_background_image }});"
            {% endif %}>
            <div class="c-hero__slide-content">
              <div class="o-wrapper">
                <div class="c-hero__slide-inner">
                  {% if slide.h_title %}
                    <h1>{{ slide.h_title }}</h1>
                  {% endif %}
                  {% if slide.h_text %}
                    <div>{{ slide.h_text }}</div>
                  {% endif %}
                  {% if slide.h_cta %}
                    <a href="{{ slide.h_cta.url }}" target="{{ slide.h_cta.target }}" class="c-btn">{{ slide.h_cta.title }}</a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="c-hero__slider-nav">
      <div class="c-hero__slide-nav-list">
        {% for slide in fields.hero_slider_items %}
          {% if slide.slide_title %}
            <div class="c-hero__slide-nav">
              <a href="#{{ slider_name }}" data-slide="{{ loop.index0 }}" class="js-slider-nav-item c-hero__slide-nav-link">
                <span class="c-hero__slide-nav-link-title">{{ slide.slide_title }}</span>
                <span class="c-hero__slide-nav-link-desc">{{ slide.slide_description ?: '&nbsp;' }}</span>
                <span class="c-hero__slide-nav-link-border">
                  <span class="js-slider-timeout c-hero__slide-nav-link-border-inner"></span>
                </span>
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      <div class="js-slider-arrows c-hero__slider-arrows"></div>
    </div>
    <div class="c-hero__slider-wave"></div>
  </section>
{% endif %}